{
  "name": "open_terminal",
  "description": "Returns a command to open a new terminal session in the client",
  "input_schema": {
    "type": "object",
    "properties": {
      "system": {
        "type": "string",
        "description": "The system identifier"
      },
      "directory": {
        "type": "string",
        "description": "The working directory"
      }
    },
    "required": [
      "system"
    ]
  },
  "annotations": {
    "destructiveHint": true,
    "openWorldHint": true
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "command": {
        "type": "string",
        "description": "The local command to execute to open a terminal"
      }
    },
    "required": [
      "command"
    ]
  }
}