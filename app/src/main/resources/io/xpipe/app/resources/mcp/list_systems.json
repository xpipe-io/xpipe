{
  "name": "list_systems",
  "description": "Lists all available systems in XPipe",
  "inputSchema": {
    "type": "object",
    "properties": {
      "filter": {
        "type": "string",
        "description": "The system name filter, also supports globs"
      }
    },
    "required": []
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "found": {
        "type": "array",
        "description": "The found list of systems",
        "properties": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the system"
            },
            "path": {
              "type": "string",
              "description": "The full path of the system"
            }
          },
          "required": [
            "name",
            "path"
          ]
        }
      }
    },
    "required": ["found"]
  },
  "annotations": {
    "readOnlyHint": true,
    "destructiveHint": false,
    "openWorldHint": false
  }
}